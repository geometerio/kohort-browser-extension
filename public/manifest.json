{
  // Comments are accepted in the manifest, even though it is JSON.
  "manifest_version": 3,
  "name": "Kohort Browser Extension",
  "version": "0.1.0",
  "author": "Oliver Switzer",
  "description": "TBD",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["*://*/*"],
  "icons": {
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "browser_action": {
    "default_icon": {
      "192": "logo192.png",
      "512": "logo512.png"
    },
    "default_title": "Popup",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "build/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:4001/*",
        "https://localhost:4001/*",
        "https://standups.staging.geometer.dev/*",
        "https://kohort.io/*"
      ],
      "js": ["build/kohort_content.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://localhost:4001/*",
        "http://www.pivotaltracker.com/n/projects*",
        "https://www.pivotaltracker.com/n/projects*"
      ],
      "js": ["build/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["build/injected.js", "images/*", "*"],
      "matches": ["https://pivotaltracker.com/*"]
    }
  ]
}
